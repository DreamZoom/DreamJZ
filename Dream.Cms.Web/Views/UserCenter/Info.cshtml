@model Dream.SSO.Models.User
@{
    ViewBag.Title = "我的信息";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h4>我的信息</h4>
<div class="line"></div>
@if (ViewBag.message != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @ViewBag.message
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-warning" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            @Html.ValidationSummary(true)
        </div>
    }
    <div class="form-group row">
        <div class="col-md-2 align-right">
            @Html.LabelFor(model => model.UserName)
        </div>

        <div class="col-md-8" style="padding-left:25px">
            @Html.DisplayFor(model => model.UserName)
           
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 align-right">
            <label>有效期</label>
        </div>

        <div class="col-md-8" style="padding-left:25px">
            @Model.EndTime.ToShortDateString()
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 align-right">
            @Html.LabelFor(model => model.NickName)
        </div>

        <div class="col-md-8">
            @Html.EditorFor(model => model.NickName)
            @Html.ValidationMessageFor(model => model.NickName)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-2 align-right">
            @Html.LabelFor(model => model.Mail)
        </div>

        <div class="col-md-8">
            @Html.EditorFor(model => model.Mail)
            @Html.ValidationMessageFor(model => model.Mail)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 align-right">
            @Html.LabelFor(model => model.Tell)
        </div>

        <div class="col-md-8">
            @Html.EditorFor(model => model.Tell)
            @Html.ValidationMessageFor(model => model.Tell)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">

        </div>

        <div class="col-md-8">
            <button type="submit" class="btn btn-info">保存信息</button>
        </div>
    </div>


}