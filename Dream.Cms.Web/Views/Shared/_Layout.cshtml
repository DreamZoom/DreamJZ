@{
    var home = "/";
    var controllerName = ViewContext.Controller.ControllerContext.RouteData.Values["controller"];
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link href="~/Themes/vivian/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Themes/vivian/styles.css" rel="stylesheet" />
    <link href="~/Themes/vivian/nav.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)

    <script>
        $(function () {

            if ("userjob" == "@controllerName.ToString().ToLower()") {
                $(".nav li").removeClass("active");
                $("[data-controller=userjob]").addClass("active");
            }
            else if ("home" == "@controllerName.ToString().ToLower()") {
                var url = window.location.href;
                var  sectionName = "none";
                if (url.split('#').length > 1)
                {
                    sectionName = url.split('#')[1];
                }
                $(".nav li").removeClass("active");                
                $("[data-section="+sectionName+"]").addClass("active");
            }


            $("#main-navs").on("click", "li", function () {
                $(".nav li").removeClass("active");
                $(this).addClass("active");
            })

        })
    </script>
</head>
<body>
    <nav class="navbar navbar-default nav-big navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@home"><img src="~/Content/imgs/logo.png" class="logo" /></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right" id="login-navs">
                    @Html.Partial("_LoginPartial")
                </ul>
                <ul class="nav navbar-nav navbar-right" id="main-navs">
                    <li data-controller="home" data-section="home"> <a href="@home#home" class="smoothScroll">首页</a></li>
                    <li data-controller="userjob" >  @Html.ActionLink("兼职", "Index", "Userjob")</li>
                    <li data-controller="home" data-section="plan"> <a href="@home#plan" class="smoothScroll"> 优势</a></li>
                    <li data-controller="home" data-section="about-us"> <a href="@home#about-us" class="smoothScroll"> 关于</a></li>
                    
                </ul>

               
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    




    <div class="main-body">
        @RenderBody()
    </div>



    <div id="footerwrap" class="footer bottom-footer">
        <div class="container">
           
                <div class="row">
                    <div class="col-md-4" style="text-align:center">
                        <img src="~/images/logo-gray.png" style="width:200px" />
                    </div>
                    <div class="col-md-6 border-left-line">
                        <div>
                            <div>
                                公司地址：成都市锦江区东大街较场坝东五街8号东方广场B座
                            </div>

                            <div>
                                客服电话：17736814462
                            </div>

                            <div>
                                客服QQ：2865202151  客服微信：aosimeijz
                            </div>
                            <div>

                                 copyright &copy; @DateTime.Now.Year 成都奥斯美文化传播有限公司 蜀ICP备17011994号.
                            </div>
                        </div>
                    </div>
                
                    <div class="col-md-2">
                        <img src="~/images/1491753056.png" style="width:100px;" />
                    </div>

            </div>
        </div>
    </div>


</body>
</html>



