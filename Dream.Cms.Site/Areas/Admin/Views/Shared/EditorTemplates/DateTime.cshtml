

<input type="text" size="16" style="width:200px;" readonly class="form-control" name="@Html.ViewData.ModelMetadata.PropertyName" id="@Html.ViewData.ModelMetadata.PropertyName" value="@(Model??DateTime.Now)" />
<script type="text/javascript">
    $(function () {
        $('#@Html.ViewData.ModelMetadata.PropertyName').datetimepicker({
            format: 'yyyy/mm/dd hh:ii:ss'
        });
    });
    
</script>